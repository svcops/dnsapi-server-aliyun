<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} %highlight(%-5level) [%20.20thread] %cyan(%-40.40logger{39}) : %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="io.intellij" level="DEBUG"/>

    <root level="info">
        <appender-ref ref="console"/>
    </root>

</configuration>